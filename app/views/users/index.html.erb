<main>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <%= render 'users/user', user: @user %>
                <%= render 'books/new', book: @book %>
            </div>
       
            <div class="col-md-8 offset-md-1">       
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>User</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td><%= user.name %></td>
                                <td> 
                                    <%= image_tag user.get_profile_image(100,100) %>%> 
                                    <%= link_to "Show", user_path(user.id) %>  
                                </td>
                            </tr>
                        <% end %>
                    </tbody> 
                </table>
            </div>
        </div>
    </div>
</main>
